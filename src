import java.io.Console;

public class LoginSystem {

    // Predefined correct credentials
    private static final String CORRECT_USERNAME = "admin";
    private static final String CORRECT_PASSWORD = "password123";

    public static void main(String[] args) {

        Console console = System.console();

        // Check if console is available
        if (console == null) {
            System.out.println("Console not available. Run this program from Command Prompt or Terminal.");
            return;
        }

        int attempts = 3; // Maximum number of login attempts

        // Loop to allow user up to 3 attempts
        while (attempts > 0) {

            // Prompt user for username
            String username = console.readLine("Enter username: ");

            // Prompt user for password (masked with *)
            char[] passwordArray = console.readPassword("Enter password: ");
            String password = new String(passwordArray);

            // Check if credentials are correct
            if (username.equals(CORRECT_USERNAME) && password.equals(CORRECT_PASSWORD)) {
                System.out.println("Login successful. Welcome, " + username + "!");
                break; // Exit loop if login is successful
            } else {
                attempts--;
                System.out.println("Incorrect username or password.");

                // Comment after each entry attempt
                if (attempts > 0) {
                    System.out.println("You have " + attempts + " attempt(s) remaining.\n");
                } else {
                    System.out.println("You have exceeded the maximum number of attempts. Access denied.");
                }
            }
        }
    }
}
